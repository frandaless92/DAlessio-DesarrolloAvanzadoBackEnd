<ul id="productsList" data-cart-id="{{cartId}}">
  {{#each products}}
    <li>
      <img
        src="{{this.thumbnails}}"
        alt="{{this.title}}"
        style="max-width: 150px; border-radius: 8px; margin-bottom: 1rem;"
      />
      <strong>{{this.title}}</strong><br />
      <span>{{this.description}}</span><br />
      <strong>Precio:</strong>
      ${{this.price}}<br />
      <strong>Stock:</strong>
      {{this.stock}}<br />

      <label>Cantidad:</label>
      <input
        type="number"
        min="1"
        max="{{this.stock}}"
        value="1"
        class="quantity-input"
        data-pid="{{this._id}}"
      />

      <div class="actions">
        <button class="add-btn" data-pid="{{this._id}}">Agregar al carrito</button>
      </div>
    </li>
  {{/each}}
</ul>

<div class="center">
  <a href="/api/views/carts/{{cartId}}" class="btn-return">â¬… Volver al carrito</a>
</div>

